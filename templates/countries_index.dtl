{% extends "layouts/base.html" %}

{% block title %}Nationen{% endblock %}

{% block content %}

  <div class=container>
    <h1>Nationen</h1>
    <p>
      <ul>
        {% for c in countries %}
          {% if c.country|length > 0 %}
            <li><a href="/countries/{{ c.country }}">{{ c.country }}</a></li>
          {% endif %}
        {% empty %}
          <li>Keine Nationen gefunden</li>
        {% endfor %}
      </ul>
    </p>
  </div>

{% endblock  %}
